# Development environment variables for Nimora API
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME=Nimora API
APP_VERSION=2.0.0
DEBUG=true
ENVIRONMENT=development

# Security
PAYLOAD_SALT=nimora_secure_payload_2025_dev
SECRET_KEY=your-super-secret-key-change-in-production

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://nimora.duvarakesh.xyz"]

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Cache Settings
CACHE_TTL=300
# REDIS_URL=redis://localhost:6379/0  # Uncomment to use Redis

# External Services
PSG_TECH_BASE_URL=https://ecampus.psgtech.ac.in
