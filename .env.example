# Nimora Environment Variables
# Copy this file to .env and fill in the values

# ===================
# Database
# ===================
DATABASE_URL=postgresql://nimora:nimora_password@localhost:5432/nimora_db

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# JWT Authentication
# ===================
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ===================
# Encryption (for eCampus credentials)
# ===================
# Generate a 32-byte hex key: openssl rand -hex 32
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ===================
# Application URLs
# ===================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
API_PREFIX=/api

# ===================
# Environment
# ===================
NODE_ENV=development
LOG_LEVEL=debug

# ===================
# Scraping Configuration
# ===================
ECAMPUS_BASE_URL=https://ecampus.psgtech.ac.in
SCRAPER_TIMEOUT=30000
SCRAPER_HEADLESS=true

# ===================
# Cache Configuration
# ===================
CACHE_TTL_ATTENDANCE=1800
CACHE_TTL_CGPA=3600
CACHE_TTL_TIMETABLE=86400

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
