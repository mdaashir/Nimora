# Nimora Environment Variables

# ===== APPLICATION & RUNTIME =====
NODE_ENV=production
PORT=3001
API_PREFIX=/api

# ===== URL & CLIENT CONFIGURATION =====
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT=30000

# ===== SECURITY & ENCRYPTION =====
ENCRYPTION_KEY=your_encryption_key_here_64_chars
ENCRYPTION_SALT=your_encryption_salt_here

# ===== JWT AUTHENTICATION =====
JWT_ACCESS_SECRET=your_jwt_access_secret_here_64_chars_min
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_64_chars_min
JWT_REFRESH_EXPIRATION=7d

# ===== DATABASE CONFIGURATION =====
POSTGRES_USER=your_db_username_here
POSTGRES_PASSWORD=your_secure_db_password
POSTGRES_DB=your_db_name_here
DATABASE_URL=postgresql://your_db_username_here:your_secure_db_password@localhost:5432/your_db_name_here

# ===== CACHE & REDIS CONFIGURATION =====
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://localhost:6379
CACHE_TTL=300000
CACHE_MAX_ITEMS=100

# ===== PASSWORD HASHING =====
BCRYPT_SALT_ROUNDS=10

# ===== SCRAPING CONFIGURATION =====
SCRAPER_TIMEOUT=30000
ECAMPUS_BASE_URL=https://ecampus.psgtech.ac.in

# ===== LOGGING =====
LOG_LEVEL=debug

# ===== FEATURE FLAGS =====
DISABLE_FEEDBACK=false

# ===== CI / CD =====
# Set to 'true' when running in CI/CD pipeline (GitHub Actions, etc.)
# CI=true

