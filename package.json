{
  "name": "nimora",
  "version": "2.0.0",
  "private": true,
  "description": "Nimora - Modern Student Portal for PSG Tech",
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "dev:frontend": "pnpm --filter @nimora/client dev",
    "dev:backend": "pnpm --filter @nimora/server dev",
    "build": "pnpm --parallel -r run build",
    "build:frontend": "pnpm --filter @nimora/client build",
    "build:backend": "pnpm --filter @nimora/server build",
    "start": "pnpm --parallel -r run start",
    "start:frontend": "pnpm --filter @nimora/client start",
    "start:backend": "pnpm --filter @nimora/server start:prod",
    "test": "pnpm --parallel -r run test",
    "test:frontend": "pnpm --filter @nimora/client test",
    "test:backend": "pnpm --filter @nimora/server test",
    "test:e2e": "pnpm --filter @nimora/client run test:e2e",
    "test:e2e:ui": "pnpm --filter @nimora/client run test:e2e:ui",
    "test:coverage": "pnpm --parallel -r run test:coverage",
    "lint": "pnpm --parallel -r run lint",
    "typecheck": "pnpm --parallel -r run typecheck",
    "format": "pnpm --parallel -r run format",
    "prepare": "husky install",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "docker:build": "docker-compose build",
    "docker:build:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml build",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:prune": "docker system prune -f",
    "db:migrate": "pnpm --filter @nimora/server prisma:migrate:dev",
    "db:generate": "pnpm --filter @nimora/server prisma:generate",
    "clean": "pnpm --parallel -r run clean && rimraf node_modules"
  },
  "keywords": [
    "nimora",
    "student-portal",
    "psg-tech",
    "ecampus",
    "attendance",
    "cgpa"
  ],
  "author": "mdaashir",
  "license": "MIT",
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "glob": "^10.3.10",
      "rimraf": "^6.0.0",
      "npmlog": "^7.0.1",
      "gauge": "^5.0.1",
      "are-we-there-yet": "^4.0.1",
      "inflight": "^1.0.6",
      "whatwg-encoding": "^3.1.1",
      "sol-redis-pool": "^0.3.3"
    }
  },
  ".pnpmfile.cjs": {
    "note": "Remaining 5 deprecated warnings are from deep transitive deps (sol-redis-pool, whatwg-encoding, etc.) that cannot be updated without breaking changes in upstream packages. These don't affect functionality."
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.6.3"
  }
}
