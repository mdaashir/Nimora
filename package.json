{
    "name": "nimora",
    "version": "2.0.0",
    "private": true,
    "description": "Nimora - Modern Student Portal for PSG Tech",
    "scripts": {
        "dev": "pnpm --parallel -r run dev",
        "dev:frontend": "pnpm --filter @nimora/frontend dev",
        "dev:backend": "pnpm --filter @nimora/backend dev",
        "build": "pnpm --parallel -r run build",
        "build:frontend": "pnpm --filter @nimora/frontend build",
        "build:backend": "pnpm --filter @nimora/backend build",
        "start": "pnpm --parallel -r run start",
        "start:frontend": "pnpm --filter @nimora/frontend start",
        "start:backend": "pnpm --filter @nimora/backend start:prod",
        "test": "pnpm --parallel -r run test",
        "test:frontend": "pnpm --filter @nimora/frontend test",
        "test:backend": "pnpm --filter @nimora/backend test",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:coverage": "pnpm --parallel -r run test:coverage",
        "lint": "pnpm --parallel -r run lint",
        "test": "pnpm --parallel -r run test",
        "docker:up": "docker-compose up -d",
        "docker:up:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
        "docker:down": "docker-compose down",
        "docker:down:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down",
        "docker:build": "docker-compose build",
        "docker:build:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml build",
        "docker:logs": "docker-compose logs -f",
        "docker:restart": "docker-compose restart",
        "docker:prune": "docker system prune -f",
        "db:migrate": "pnpm --filter @nimora/backend prisma:migrate:dev",
        "db:generate": "pnpm --filter @nimora/backend prisma:generate",
        "clean": "pnpm --parallel -r run clean && rimraf node_modules"
    },
    "keywords": [
        "nimora",
        "student-portal",
        "psg-tech",
        "ecampus",
        "attendance",
        "cgpa"
    ],
    "author": "mdaashir",
    "license": "MIT",
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=9.0.0"
    },
    "packageManager": "pnpm@9.15.0"
}
